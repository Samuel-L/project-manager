{
  "parser": "babel-eslint",
  "extends": "airbnb",
  "plugins": [
    "react",
    "import",
    "jsx-a11y",
  ],
  "rules": {
    "react/prefer-stateless-function": "off",
    "jsx-a11y/click-events-have-key-events": "off",
    "jsx-a11y/no-static-element-interactions": "off",
    "jsx-a11y/anchor-is-valid": [ "error" , {
        "components": ["Link"],
        "specialLink": ["to"],
    }],
    "jsx-a11y/label-has-for": [2, {
     "required": {
        "some": [ "nesting", "id" ]
      },
    }],
  },
  "globals": {
    "window": true
  }
}
